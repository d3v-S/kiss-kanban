#editor-kanban-item-task, #viewer-kanban-item-task {
    padding: 5px 5px 5px 5px;
    font-family: JetBrains Mono;
    font-size: 12px;
    letter-spacing: .9px;
    line-height: 15px;
    border: 5px solid #333;
    border-radius: 20px;

    background-color: #333;
    color: white;
    
}

#btn-kanban-item-del, #btn-kanban-item-editor{
    color: white;
    font-family: Azeret Mono;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: .7px;
    margin: 2px;
    background-color: #444;
    border-bottom: 1px solid white;
}

QScrollbar {
    max-width: 5px;
}

